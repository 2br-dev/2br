@import './props.styl'
//
//
//
.main
    background-color: color_2
//
.banner
    width: 100%
    //
    &__img
        display: block
        width: 100%
        height: auto
        withoutHighlighting()
// 
.body
    padding: 0 30px
//
.title 
    font-size: 170px
    color: color_1
    font-weight: 700
//
//
//
@media screen and (max-width: 1500px) 
    .body
        padding: 0 20px
    //
    .title 
        font-size: 110px  
    //  
//
//
//
@media screen and (max-width: 1000px) 
    .body
        padding: 0 15px
    //
    .title 
        font-size: 100px
    //
// 
// 
// 
@media screen and (max-width: 750px) 
    .body
        padding: 0 10px
    //
    .title 
        font-size: 50px
    //
// 
// 
// 
.empty 
    height 60vh
    display: flex
    align-items: center
    justify-content: center
    //
    &__title
        font-size: 24px
        color: color_1
        font-weight: 700
        //
        & span 
            color: color_3
            font-size: inherit 
            font-weight: inherit
//
//
//
@media screen and (max-width: 1000px) 
    .empty 
        //
        &__title
            font-size: 18px
// 
// 
// 
@media screen and (max-width: 750px) 
    .empty 
        //
        &__title
            font-size: 14px
            //
// 
// 
// 
.content
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    padding: 100px 0 0 0
    //
    &__col
        width: calc(50% - 20px)
        display: flex
        margin: 0 0 100px 0
        display: flex
    //
    &__left
        flex-shrink: 0
        //
        &_img
            display: block
            width: 100%
            max-width: 125px
            height auto
    //
    &__right
        flex-grow: 1
        padding: 0 0 0 30px
        display: flex
        flex-direction: column
    //
    &__title
        font-size: 24px
        color: color_1
        font-weight: 700
        margin: 0 0 50px 0
        flex-shrink: 0
    //
    &__list
        padding: 20px
        flex-grow: 1
    //
    &__item
        font-size: 18px
        color: color_1
        margin: 0 0 5px 0
    //
    &__text
        font-size: 18px
        font-weight: 700
        color: color_1
        flex-shrink: 0
        //
        & span 
            font-size: inherit 
            font-weight: inherit 
            color: color_3
//
//
//
@media screen and (max-width: 1500px) 
    .content
        padding: 50px 0 0 0
        //
        &__col
            margin: 0 0 50px 0
        //
        &__left
            &_img
                max-width: 100px
        //
        &__right
            padding: 0 0 0 20px
        //
// 
// 
// 
@media screen and (max-width: 1000px) 
    .content
        padding: 30px 0 0 0
        //
        &__col
            width: 100%
            margin: 0 0 50px 0
        //
        &__left
            &_img
                max-width: 70px
        //
        &__right
            padding: 0 0 0 20px
        //
// 
// 
// 
@media screen and (max-width: 750px) 
    .content
        padding: 20px 0 0 0
        //
        &__col
            margin: 0 0 40px 0
        //
        &__left
            &_img
                max-width: 50px
        //
        &__right
            padding: 0 0 0 20px
        //
        &__title
            font-size: 16px
            margin: 0 0 20px 0
        //
        &__item
            font-size: 14px

        //
        &__text
            font-size: 14px
