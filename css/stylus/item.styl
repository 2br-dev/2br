// 
// 
// 
.nav 
    padding: 100px  0
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    //
    &__btn
        display: flex
        align-items: center
        justify-content: center
        width: calc(100% / 3)
        flex-shrink: 0
        & br
            display: none
        //
        &:hover &
            &_text
                border-color: color_3
        //
        &_text
            position relative
            transition: tDelay
            border-bottom: 2px solid transparent
            font-size: 18px
            text-transform: uppercase
            margin: 0 20px
            flex-shrink: 0
            //
            &-left
                text-align: right 
            //
            &-right
                text-align: left 
            //
            &-mobile
                display: none
            //
            &-desctop
                display: block
            //
        &_line
            flex-grow: 1
            border: 0
            height: 2px
            background: transparent
            //
            &-fire
                background: color_3
            //
            &-half-fire
                background: color_3
                width: 10%
                flex-grow: initial 

