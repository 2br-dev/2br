@import './props.styl'
//
//
//
.main
    background-color: color_2
//
.banner
    width: 100%
    //
    &__img
        display: block
        width: 100%
        height: auto
        withoutHighlighting()
// 
.body
    padding: 0 30px
//
.title 
    font-size: 170px
    color: color_3
    font-weight: 700
//
//
//
.box 
    padding: 100px 30px
    display: flex
    align-items: stretch
    justify-content: flex-start
    flex-wrap: wrap
    //
    &__col
        withoutHighlighting()
        flex-shrink: 0
        margin: 20px 20px 0 0
        width: calc(100% / 5 - 80px / 5)
        //
        &:nth-child(5n)
            margin: 20px 0 0 0

        //
        &_img-box
            position: relative
            //
            &:hover 
                & ^[1]_mask
                    opacity 0.8
        //
        &_name
            font-size: 36px
            font-weight: 700
            margin: 10px 0 0 0
            color: color_1
        //
        &_img
            width: 100%
            height: auto
            display: block
        //
        &_mask
            position: absolute
            top: 0
            left 0
            width: 100%
            height 100%
            background: color_1
            opacity 0
            transition: tDelay
            display: flex
            flex-direction: column
            align-items: flex-start
            padding: 5px
            justify-content: flex-end
            //
            &_title
                text-transform: uppercase
                font-size: 16px
                color: color_5
                //
                &::before
                    content: '['
                    font-size: inherit
                    font-weight: 700
                    color: color_5
            //
            &_description
                text-transform: uppercase
                font-size: 16px
                color: color_2
                //
                &::after
                    content: ']'
                    font-size: inherit
                    font-weight: 700
                    color: color_5
            //

        


//
//
//
@media screen and (max-width: 1500px) 
    .body
        padding: 0 20px
    //
    .title 
        font-size: 110px
    //
    .box 
        padding: 50px 20px
        //
        &__col
            width: calc(100% / 5 - 80px / 5)
            //
            &_name
                font-size: 30px       
//
//
//
@media screen and (max-width: 1000px) 
    .body
        padding: 0 15px
    //
    .title 
        font-size: 100px
    //
    .box 
        padding: 30px 15px

        //
        &__col
            margin: 15px 15px 0 0
            width: calc(100% / 5 - 60px / 5)
            //
            &_mask
                opacity 0.8
            //
            &:nth-child(5n)
                margin: 15px 0 0 0
            //
            &_name
                font-size: 25px
            //
            &_mask
                &_title
                    font-size: 12px
                //
                &_description
                    font-size: 12px
// 
// 
// 
@media screen and (max-width: 750px) 
    .body
        padding: 0 10px
    //
    .title 
        font-size: 50px
        //
    .box 
        padding: 20px 10px
        //
        &__col
            display: flex
            flex-direction: column-reverse
            margin: 0 0 20px 0
            width: 100%
            //
            &:nth-child(5n)
                margin: 20px 0 0 0
            //
            &:last-child
                margin:  0
            //
            &_name
                font-size: 25px
                margin: 0
            //
            &_mask
                &_title
                    font-size: 12px
                //
                &_description
                    font-size: 12px