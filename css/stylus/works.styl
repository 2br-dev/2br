@import './props.styl'
//
//
//
.main
    background-color: color_2
//
.banner
    width: 100%
    //
    &__img
        display: block
        width: 100%
        height: auto
        withoutHighlighting()
// 
.body
    padding: 0 30px
    //
    &__row
        display: flex
        justify-content: space-between
        align-items: center
    //
    &__filter
        padding: 10px 0
        //
        &_link
            display: block
            cursor pointer
            font-size: 18px
            text-transform: uppercase
            margin: 0 0 10px 0
            color: color_6
            //
            &:hover
            &-active
                color: color_1
            //
            &:last-child
                margin: 0
            //
            &::before
                content: '/'
                color: color_3
                margin: 0 5px 0 0
 
//
.title 
    font-size: 170px
    color: color_1
    font-weight: 700
    flex-shrink: 0
//
//
//
@media screen and (max-width: 1500px) 
    .body
        padding: 0 20px
    //
    .title 
        font-size: 110px  
    //  
//
//
//
@media screen and (max-width: 1000px) 
    .body
        padding: 0 15px
        //
        &__filter
            padding: 10px 0
            //
            &_link
                font-size: 16px
    //
    .title 
        font-size: 100px
    //
// 
// 
// 
@media screen and (max-width: 750px) 
    .body
        padding: 0 10px
        //
        &__row
            display: block
        //
        &__filter
            //
            &_link
                font-size: 14px
    //
    .title 
        font-size: 50px
    //
// 
// 
// 
.projects 
    padding: 100px 0 0 0
    display: flex
    flex-wrap: wrap
    align-items: stretch
    justify-content: space-between
    //
    &__item
        cursor: pointer
        position relative
        width: calc(50% - 20px)
        margin: 0 0 40px 0
        overflow: hidden
        display: flex
        align-items: flex-end
        justify-content: center
        //
        &:hover 
            & ^[0]__img
                transform: scale(1) !important
            & ^[0]__mask
                opacity: 0.8      
        //
        &-stub
            background: color_1
            opacity: 0.8
            display: flex
            align-items: center
            justify-content: center
            //
            &_title
                font-size: 24px
                font-weight: 300
                color: color_2
                //
                &::after
                &::before
                    font-size: inherit
                    font-weight: 700
                    color: color_5
                //
                &::before
                    content: '['
                //
                &::after
                    content: ']'
                //
    //
    &__img
        display: block
        width: 100%
        height: auto
        transition: tDelay
        transform: scale(1.1)
    //
    &__mask
        position: absolute
        top: 0
        left 0
        width: 100%
        height 100%
        background: color_1
        opacity: 0
        transition: tDelay
        display: flex
        justify-content: center
        padding: 10px
        align-items: center
        //
        &_convas
            width: 100%
            height: 100%
            position relative
        //
        &_text
            position: absolute
            max-width: 60%
            top: 0
            left: 0
            text-align: center
            font-size: 24px
            font-weight: 300
            color: color_2
            //
            &::after
            &::before
                font-size: inherit
                font-weight: 700
                color: color_5
            //
            &::before
                content: '['
            //
            &::after
                content: ']'
            //
//
// 
// 
@media screen and (max-width: 1500px)
    .projects 
        padding: 50px 0 0 0
        //
        &__item
            width: calc(50% - 10px)
            margin: 0 0 20px 0
        //
        &__mask
            //
            &_text
                font-size: 20px
        //
// 
// 
// 
@media screen and (max-width: 1000px)
    .projects 
        padding: 30px 0 0 0
        //
        &__item
            width: calc(50% - 7.5px)
            margin: 0 0 15px 0
        //
        &__img
            transform: scale(1)
        //
        &__mask
            display: block
            opacity: 0.8 !important
            //
            &_text
                font-size: 16px
                top: 50% !important
                left: 50% !important
                transform: translate(-50%, -50%) !important
// 
// 
// 
@media screen and (max-width: 750px)
    .projects 
        padding: 20px 0 0 0
        //
        &__item
            width: 100%
            margin: 0 0 10px 0
            //
            &-stub
                display: none
