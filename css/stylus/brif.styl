@import './props.styl'



.b
    &__overlay
        position: fixed
        left: 0
        top: 0
        width: 100%
        height: 100%
        background: #000
        opacity 0.8
        z-index 10000
        display: none
    
    &__form
        display: none
        position: absolute
        top: 10px
        left 50%
        transform: translateX(-50%)
        background: #fff
        width: 100%
        max-width: 600px
        padding: 50px 0
        z-index 10001

    &__close
        outline: none
        position: absolute
        right: 0
        top: 0
        height 40px
        width: 40px
        background: color_3
        border: 0
        background-position: center
        background-size: 20px 20px
        background-repeat: no-repeat
        background-image: url(/images/icons/icon_cross.svg)
        cursor pointer
    
    &__title-box
        padding: 0 50px

    &__title
        font-size: 24px
        margin: 0 0 20px 0
    
    &__title-2
        margin: 0 0 20px 0
        font-size: 14px
        & span
            color: color_3
            font-size: inherit
    
    &__box
        background: transparent
        padding: 10px 50px  
        &-error
            background: rgba(242, 204, 47, 0.3);
    
    &__box-submit
        margin: 20px 0 0 0
        display: flex
        padding: 0 20px
        align-items: center
        justify-content: center
    
    &__label
        display: block
        margin: 0 0 5px 0
        font-size: 18px
        & span 
            color: color_3
            font-size: inherit
    &__label-2
        display: block
        margin: 0 0 20px 0
        font-size: 18px
        & span 
            color: color_3
            font-size: inherit
    
    &__textarea
        display: block
        width: 100%
        height 100px
        overflow: auto
        background: transparent
        font-size: 14px
        padding: 5px
        resize: none
        outline: none
        border: 1px solid #000

    &__textarea-2
        display: block
        width: 100%
        height 50px
        overflow: auto
        margin: 20px 0 0 0
        background: transparent
        font-size: 14px
        padding: 5px
        resize: none
        outline: none
        border: 1px solid #000
    
    &__check
        display: none
        &:checked + ^[0]__ckeck_label::before
            background: color_3
            border-color: color_3
            background-image: url(/images/icons/icon_checked.svg)

    &__ckeck_label
        withoutHighlighting()
        display: block
        position relative
        margin: 0 0 10px 0
        font-size: 18px
        cursor pointer
        padding: 0 0 0 25px
        &::before
            content: ''
            position: absolute
            width: 15px
            height 15px
            border: 1px solid #000000
            cursor pointer
            left: 0
            top: 50%
            transform: translateY(-50%)
            background-position: center
            background-size: 8px 8px
            background-repeat: no-repeat
    
    &__input-hide
        display: none
        opacity 0
        width: 100%
        padding: 5px
        font-size: 14px
        background: transparent
        border: 1px solid #000
        margin: 0 0 10px 0
        outline: none
        &-visible
            display: block
            opacity 1
    &__input
        display: block
        width: 100%
        padding: 5px
        font-size: 14px
        background: transparent
        border: 1px solid #000
        outline: none
    
    &__btn-submit
        padding: 10px 30px
        background: color_3
        border: 2px solid color_3
        cursor pointer
        transition: tDelay
        text-transform: uppercase
        font-size: 18px
        color: #000
        outline: none;
        &:hover
            background: transparent

@media screen and (max-width: 750px) 
    .b        
        &__form
            padding: 20px 0

        &__close
            height 30px
            width: 30px
            background-size: 15px 15px
        
        &__title-box
            padding: 0 20px

        &__title
            font-size: 20px
        
        &__box
            padding: 10px 20px  
        
        &__label
            font-size: 16px

        &__label-2
            font-size: 16px
    
        &__ckeck_label
            font-size: 16px
        

        &__btn-submit
            width: 100%
            text-align: center


