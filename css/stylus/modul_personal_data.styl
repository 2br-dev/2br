@import './props.styl'
//
//
//
//
//
.pd-box
    //
    &__section
        display: none
        //
        &-active
            display: block
    //
    &__row
        padding: 10px 0
        //
        &-btn
            display: flex
            align-items: center
            justify-content: space-between
            max-width 600px
    //
    &__text
        font-size: 24px
        color: color_1
        //
        & span 
            font-weight: 700
            font-size: inherit
    //
    &__input
        display: block
        width: 100%
        max-width 600px
        font-size: 24px
        border: 1px solid color_3
        transition: tDelay
        padding: 5px
        outline: none
        //
        &-wrong
            border-color: #ff0000
    // 
    &__btn
        display: block;
        padding: 10px 20px;
        font-size: 20px;
        text-transform: uppercase;
        background: #f2cc2f;
        cursor: pointer;
        color: #000;
        border: 0;
        outline: none;

//
.manage
    padding: 100px 0 0 0
    display: flex
    flex-direction: column
    //
    &__link
        color: color_3
        font-size: 24px
        margin: 0 0 20px 0
        display: block
        cursor pointer
        //
        &:last-child
            margin: 0
        //
        &:hover
            text-decoration: underline
// 
.pass_overlay 
    position: fixed
    left 0
    top: 0
    background-color: color_1
    opacity 0.8
    width: 100%
    height 100%
    z-index: 999
    display: none
//
.pass
    display: none
    position: fixed
    left 50%
    top: 50%
    transform: translate(-50%, -50%)
    background-color: color_2
    width: 100%
    max-width: 500px
    z-index: 1000
    padding: 60px 20px 20px 20px
    //
    &__title
        font-size: 24px
        font-weight: 700
        color: color_1
        margin: 0 0 10px 0
    //
    &__btn-close
        background-color: transparent
        border: 0
        display: block
        width: 20px
        height 20px
        position: absolute
        right 20px
        top: 20px
        cursor pointer
        background-repeat: no-repeat
        background-size: 100% 100%
        background-position: center
        background-image: url(/images/icons/icon_cross.svg)
        outline: none
    //
    &__row
        padding: 10px 0
        //
        &-btn
            display: flex
            justify-content: flex-end
    //
    &__input
        display: block
        width: 100%
        font-size: 24px
        border: 1px solid color_3
        transition: tDelay
        padding: 5px
        outline: none
        //
        &-wrong
            border-color: #ff0000
    //
    &__btn-submit
        display: block;
        padding: 10px 20px;
        font-size: 20px;
        text-transform: uppercase;
        background: #f2cc2f;
        cursor: pointer;
        color: #000;
        border: 0;
        outline: none;
//
//
//
@media screen and (max-width: 1500px) 
    .manage
        padding: 50px 0 0 0
//
//
//
@media screen and (max-width: 1000px) 
    .pd-box
        &__row
            padding: 5px 0
            //
            &-btn
                max-width 100%
        //
        &__text
            font-size: 20px
        //
        &__input
            font-size: 20px
            max-width: 100%
        // 
        &__btn
            font-size: 18px;

    //
    .manage
        padding: 30px 0 0 0
        //
        &__link
            font-size: 20px
            margin: 0 0 10px 0
    //
    .pass
        //
        &__title
            font-size: 20px
        //
        &__row
            padding: 5px 0
        //
        &__input
            font-size: 20px
        //
        &__btn-submit
            font-size: 18px;
// 
// 
// 
@media screen and (max-width: 750px) 
    .pd-box
