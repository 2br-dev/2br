@import './props.styl'
//
//
//
.main
    background-color: color_2
//
.banner
    width: 100%
    //
    &__img
        display: block
        width: 100%
        height: auto
        withoutHighlighting()
// 
.body
    padding: 0 30px
    //
    &__row
        display: flex
        justify-content: space-between
        align-items: center
    //
    &__filter
        padding: 10px 0
        //
.title 
    display: flex
    align-items: center
    justify-content: space-between
    //
    &__text
        font-size: 170px
        color: color_1
        font-weight: 700
        flex-shrink: 0
    //
    &__bar
        flex-shrink: 0

.link
    display: block
    cursor pointer
    font-size: 18px
    text-transform: uppercase
    margin: 0 0 10px 0
    color: color_6
    //
    &:hover
    &-active
        color: color_1
    //
    &:last-child
        margin: 0
    //
    &::before
        content: '/'
        color: color_3
        margin: 0 5px 0 0

//
//
//
@media screen and (max-width: 1500px) 
    .body
        padding: 0 20px
    //
    .title 
        //
        &__text
            font-size: 110px
//
//
//
@media screen and (max-width: 1000px) 
    .body
        padding: 0 15px
        //
        &__filter
            padding: 10px 0
            //
            &_link
                font-size: 16px
    //
    .title 
        display: block
        //
        &__text
            margin: 0 0 10px 0
            font-size: 100px

// 
// 
// 
@media screen and (max-width: 750px) 
    .body
        padding: 0 10px
        //
        &__row
            display: block
        //
        &__filter
            //
            &_link
                font-size: 14px
    //
    .title 
        //
        &__text
            font-size: 50px

    .link
        font-size: 14px
        margin: 0 0 5px 0
// 
// 
// 
.forbidden
    padding: 150px 0
    //
    &__title
        font-size: 24px
        color: color_1
        font-weight: 700 
        text-align: center
//
//
//
//
.content
    padding: 100px 0
//
//
//
@media screen and (max-width: 1500px) 
    .content
        padding: 50px 0
//
//
//
@media screen and (max-width: 1000px) 
    .content
        padding: 30px 0
// 
// 
// 
@media screen and (max-width: 750px) 
    .content
        padding: 20px 0
