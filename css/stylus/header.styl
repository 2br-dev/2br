@import './props.styl'
//
//
//
.header
    position: fixed
    top: 0
    left: 0
    width: 100%
    background: transparent
    z-index: 100
    &::before
        content: ''
        position: absolute
        opacity 0.8
        top: 0
        left: 0
        transition: tDelay
        width: 100%
        height: 100%
    //
    &__body
        padding: 40px 30px
        display: flex
        align-items: center
        justify-content: space-between
        position relative
    //
    &__box-logo
        cursor: pointer
        display: block
        flex-grow: 1
        //
        &_img
            display: block
            height: 44px
            width: 100px
            transition: tDelay
        //
        &:hover &_img
            fill: color_3
    //
    &__brif-btn
        display: block
        flex-shrink: 0
        font-size: 14px
        color: color_2
        text-transform: uppercase
        cursor pointer
        transition: tDelay
        margin: 0 30px 0 0
        //
        &:hover
            color: color_3
        //
        &::after
        &::before
            font-size: inherit
            font-weight: 700
            color: color_5
        //
        &::before
            content: '['
        //
        &::after
            content: ']'
    //
    &__lk-link
        display: block
        flex-shrink: 0
        font-size: 14px
        color: color_2
        text-transform: uppercase
        cursor pointer
        transition: tDelay
        margin: 0 30px 0 0
        //
        &:hover
            color: color_3
        //
        &::after
        &::before
            font-size: inherit
            font-weight: 700
            color: color_5
        //
        &::before
            content: '['
        //
        &::after
            content: ']'
    //
    &__btn
        flex-shrink: 0
        width: 40px
        height: 25px
        cursor: pointer
        position relative
        // 
        &_line 
            position: absolute
            height 5px
            width: 100%
            background: color_3
            // 
            &-N1
                transition: 0.4s
                top: 0
                right 0
            &-N2
                transition: 0.4s
                top: 10px
                left 0
            &-N3
                transition: 0.4s
                top: 20px
                right: 0
        //
        &_cross &
            &_line
                &-N1
                    animation: topLine 0.4s linear
                    animation-fill-mode: forwards 
                //
                &-N2
                    width: 0
                //
                &-N3
                    animation: bottomLine 0.4s linear
                    animation-fill-mode: forwards
                // 
        &_back &
            &_line
                &-N1
                    animation: topLineBack 0.4s linear
                    animation-fill-mode: forwards 
                //
                &-N3
                    animation: bottomLineBack 0.4s linear
                    animation-fill-mode: forwards
            //
        &_finaly &
            &_line
                &-N2
                    width: 100%
    //
    &__scroll
        position: absolute
        top: 50%
        left 50%
        transform: translate(-50%, -50%)
        width: 100px
        height: 100px
        opacity: 0
        transition: tDelay
        //
        &-active
            opacity: 1
        //
        &_body
            width: 100%
            height 100%
            position relative
        //
        &_arrow
            position: absolute
            top: 5px
            left 50%
            transform: translateX(-50%)
            height: 50%
            width: auto
            //
            &-up
                display: block
                animation: arrowUp 0.8s linear infinite 
        //
        &_label
            position: absolute
            bottom: 10px
            left: 50%
            transform: translateX(-50%)
            color: color_2
            text-transform: uppercase
            font-size: 16px
            //
            &::after
            &::before
                font-size: inherit
                font-weight: 700
                color: color_5
            //
            &::before
                content: '['
            //
            &::after
                content: ']'
            //
            &-up
                display: block
    // 
    &__menu
        position: fixed
        top: 124px
        left: 0
        width: 100%
        height: calc(100vh - 124px)
        background-color: transparent
        z-index: 200
        display: none
        //
        &_overlay
            position: absolute
            width: 100%
            height 100%
            background: color_1
            opacity 0.8
        // 
        &_center
            position relative
            width: 100%
            height 100%
            max-width: 1000px
            margin: 0 auto
            padding: 40px 40px 124px 40px
            display: flex
            flex-direction: column
            justify-content: space-between
            align-items: flex-start
        //
        &_nav-box
            width: 100%
            display: flex
            flex-direction: column
            align-items: flex-start
            flex-grow: 1
            //
        &_item
            font-size: 40px
            font-weight: 500
            color: color_6
            margin: 0 0 25px 0
            cursor: pointer
            transition: tDelay
            withoutHighlighting()
            // 
            &:last-child
                margin: 0
            //
            &-active
            &:hover
                color: color_3      
            //
            &-phone
                font-size: 28px
                font-weight: 700
            //
            &-mobile
                display: none
            &-desctop
                display: block
            //
        &_bottom
            flex-shrink: 0
            margin: 0 0 25px 0
            width: 100%
            display: flex
            align-items: center
            justify-content: space-between
            //
            & ^[1]_item
                margin: 0
            //
            &-social
                justify-content: flex-end
                margin: 0
        //
        &_social 
            display: flex
            align-items: center
            justify-content: flex-start
            //
            &_icon
                width: 40px
                height: 40px
                border-radius: 20px
                cursor: pointer
                display: block
                margin: 0 15px 0 0
                transition: tDelay
                background-color: transparent
                background-size: 100%
                background-repeat: no-repeat
                background-position: center
                //
                &:last-child
                    margin: 0
                //
                &-fb
                    background-image: url(/images/icons/icon_fb_grey.svg)
                    //
                    &:hover
                        background-image: url(/images/icons/icon_fb_yellow.svg)
                //
                &-inst
                    background-image: url(/images/icons/icon_inst_grey.svg)
                    //
                    &:hover
                        background-image: url(/images/icons/icon_inst_yellow.svg)
                //
                &-telegram
                    background-image: url(/images/icons/icon_telegram.svg)
                    //
                    &:hover
                        background-image: url(/images/icons/icon_telegram_yellow.svg)
                //
                &-wa
                    background-image: url(/images/icons/icon_wa_grey.svg)
                    //
                    &:hover
                        background-image: url(/images/icons/icon_wa_yellow.svg)

// 
// 
// динамический цвет темы
// светлая тема
.app__light .header
    &::before
        background: color_2
    // 
    &__box-logo_img
        fill: color_1
    //
    &__menu
        background: color_1
//
// темная тема
.app__dark .header
    &::before
        background: color_1
    // 
    &__box-logo_img
            fill: color_2

