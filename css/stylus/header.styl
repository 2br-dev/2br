// media        
@media screen and (min-width: 1000px)
    .header__btn:hover .header__btn_line
        width: 0 !important

// 
// 
// 
@media screen and (max-width: 1500px)
    .header
        &__body
            padding: 20px
        //
        &__box-logo
            &_img
                height: 35.2px
                width: 80px
        //
        &__btn
            width: 35px
            height: 20px
            // 
            &_line 
                height 4px
                // 
                &-N1
                    top: 0
                &-N2
                    top: 8px
                &-N3
                    top: 16px
        //
        &__scroll
            width: 70px
            height: 70px
            //
            &_label
                bottom: 5px
                font-size: 16px
        // 
        &__menu
            top: 75.19px
            height: calc(100% - 75.19px)
            // 
            &_center
                padding: 20px 20px 75.19px 20px
            //
            &_item
                font-size: 30px
                margin: 0 0 20px 0
                //
                &-phone
                    font-size: 25px
                //
            &_bottom
                margin: 0 0 20px 0
            //
            &_social 
                &_icon
                    margin: 0 10px 0 0
// 
// 
// 
@media screen and (max-width: 1000px)
    .header
        &__body
            padding: 15px
        //
        &__box-logo
            &_img
                height: 30.8px
                width: 70px
            &:hover &_img
                fill: color_2
        &__scroll
            width: 50px
            height: 50px
            //
            &_arrow
                &-up
                    display: none 
            //
            &_label
                font-size: 10px
                //
                &-up
                    display: none
        //
        &__menu
            top: 60.8px
            height: calc(100% - 60.8px)
            // 
            &_center
                padding: 15px 15px 60.8px 15px
            //
            &_item
                font-size: 25px
                margin: 0 0 15px 0
                //
                &-phone
                    font-size: 20px
                //
                &-mobile
                    display: block !important
                &-desctop
                    display: none !important
                //
            &_bottom
                margin: 0 0 15px 0
            //
            &_social 
                &_icon
                    margin: 0 10px 0 0
                    width: 30px
                    height: 30px
// 
// 
// 
@media screen and (max-width: 750px)
    .header
        &__body
            padding: 10px
        //
        &__box-logo
            &_img
                height: 22px
                width: 50px
        //
        //
        &__brif-btn
            font-size: 10px
            margin: 0 10px 0 0
        //
        &__lk-link
            flex-shrink: 0
            font-size: 0
            color: transparent
            margin: 0 10px 0 0
            width: 20px
            height: 20px
            background-size: 100% 100%
            background-repeat: no-repeat
            background-position: center
            background-image: url(/images/icons/lk.svg)
        //
        &__scroll
            width: 40px
            height: 40px
            //
            &_label
                font-size: 8px
        //
        &__menu
            top: 42px
            height: calc(100% - 42px)
            // 
            &_center
                padding: 10px 10px 42px 10px
                display: block
            //
            &_nav-box
                margin: 0 0 15px 0
            //
            &_item
                font-size: 25px
                margin: 0 0 15px 0
                display: block
                //
                &-phone
                    font-size: 20px
            //
            &_bottom
                margin: 0 0 15px 0
                display: block
                //
                & ^[1]_item
                    margin: 0 0 15px 0
// 
// 
// 
@keyframes topLine
	0%
		top: 0
		right: 0
	50%
		right: 50%
		top: 100%
		transform: translate(50%, 0)
	100%
		right: 50%
		top: 50%
		transform: translate(50%, -50%) rotate(45deg)
//
@keyframes bottomLine
	0%
		top: 100%
		right: 0
	50%
		right: 50%
		top: 0
		transform: translate(50%, 0)
	100%
		right: 50%
		top: 50%
		transform: translate(50%, -50%) rotate(-45deg)
//
//
//
@keyframes topLineBack
	0%
		right: 50%
		top: 50%
		transform: translate(50%, -50%) rotate(45deg)
	50%
		right: 50%
		top: 100%
		transform: translate(50%, 0) rotate(0deg)
	100%
		right: 0
		top: 0
		transform: translate(0, 0)
//
@keyframes bottomLineBack
	0%
		right: 50%
		top: 50%
		transform: translate(50%, -50%) rotate(-45deg)
	50%
		right: 50%
		top: 0
		transform: translate(50%, 0) rotate(0deg)
	100%
		right: 0
		bottom: 0
		transform: translate(0, 0)
//
//
//
@keyframes arrowUp 
    0%
        top: 5px
    50%
        top: 0
    100%
        top: 5px
//
@keyframes arrowDown 
    0%
        top: 0
    50%
        top: 5px
    100%
        top: 0