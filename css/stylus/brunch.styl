.content 
    max-width: 1200px
    width: 100%
    margin: 0 auto
    display: flex
    padding: 0 0 100px 0
    min-height: 700px
    // 
    &__left
        flex-shrink: 0
        width: 100px
        background-repeat: no-repeat
        background-size: contain 
        background-position: 0 0
        background-image: url(/images/brunch_label.png)
        margin: 0 100px 0 0
    //
    &__right
        flex-grow: 1
// 
.row
    margin: 0 0 50px 0
    //
    &:last-child
        margin: 0
    //
    &__title
        width: 100%
        max-width: 600px
        display: flex
        justify-content: space-between
        margin: 0 0 30px 0
        //
        &_text
            font-size: 24px
            font-weight: 700
            color: color_1
    //
    &__text
        font-size: 18px
        color: color_1
        margin: 0 0 10px 0
        //
        & span 
            font-size: inherit
