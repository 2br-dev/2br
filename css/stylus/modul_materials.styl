@import './props.styl'
//
//
//
.box
    //
    &__row
        display: flex
        align-items: stretch
        border-bottom: 3px solid color_3
        padding: 20px 0
        //
        &:last-child
            border: 0
    //
    &__title
        flex-shrink: 0
        //
        &_text
            font-size: 50px
            font-weight: 700
            color: color_6
            writing-mode: vertical-lr
            transform: rotate(180deg)
            position: sticky
            top: 100px
    //
    &__content
        flex-grow: 1
        padding: 0 0 0 50px
    //
    &__label
        font-size: 36px
        font-weight: 700
        margin: 0 0 20px 0
    //
    &__list
        display: flex
        align-items: stretch
        justify-content: flex-start
        flex-wrap: wrap
        margin: 0 0 20px 0
        //
        &_box
            withoutHighlighting()
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            position relative
            cursor pointer
            transition: tDelay
            width: 20%
            padding: 20px 
            //
            &:hover ^[1]_overlay
                opacity 1
        //
        &_overlay
            position: absolute
            top: 0
            left 0
            width: 100%
            height 100%
            opacity 0
            overflow hidden
            background: color_3
            transition: tDelay
            display: flex
            align-items: center
            justify-content: center
            //
            &_text
                font-size: 24px
                text-transform: uppercase
                //
                &::before
                &::after
                    font-size: inherit
                    color: color_1
                    font-weight: 700
                &::before
                    content: '['
                &::after
                    content: ']'
        //
        &_icon
            display: block
            width: auto
            height 100%
            max-height: 120px
            margin: 0 0 20px 0
        //
        &_label
            font-size: 18px
            text-align: center
//
//
//
@media screen and (max-width: 1000px)
    .box
        //
        &__row
        //
        &__title
            //
            &_text
                font-size: 40px
        //
        &__content
            padding: 0 0 0 20px
        //
        &__label
            font-size: 30px
        //
        &__list
            margin: 0 0 20px 0
            //
            &_box
                width: calc(100% / 3)
            //
            &_icon
                max-height: 100px
            //
            &_label
                font-size: 16px
//
@media screen and (max-width: 750px)
    .box
        &__row
            padding: 10px 0
        //
        &__title
            //
            &_text
                font-size: 25px
        //
        &__content
            padding: 0 0 0 10px
        //
        &__label
            font-size: 20px
        //
        //
        &__list
            margin: 0 0 10px 0
            //
            &_overlay
                //
                &_text
                    font-size: 14px
            //
            &_box
                width: 50%
                padding: 10px
            //
            &_icon
                max-height: 60px
                margin: 0 0 10px 0
            //
            &_label
                font-size: 12px
//
//
//
//
