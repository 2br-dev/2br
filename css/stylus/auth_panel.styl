@import './props.styl'
//
//
//
.auth_overlay
    position: fixed
    z-index: 999
    top: 0
    left: 0
    background: color_1
    width: 100%
    height 100%
    opacity 0.8 
    display: none   
//
.auth__message 
    position: fixed
    z-index: 1000
    top: 50%
    transform: translateY(-50%)
    padding: 10px
    font-size: 20px
    font-weight: 700
    width: 100%
    text-align: center
    color: color_2
    display: none
//
.auth
    display: none
    position: fixed
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 100%
    max-width 600px
    z-index: 1000
    background: color_2
    padding: 100px 50px 50px 50px
    //
    &__btn
        display: block
        width: 20px
        height 20px
        position: absolute
        right 20px
        top: 20px
        cursor pointer
        background-repeat: no-repeat
        background-size: 100% 100%
        background-position: center
        background-image: url(/images/icons/icon_cross.svg)
    //
    &__row
        display: flex
        justify-content: space-between
        align-items: center
        margin: 0 0 30px 0
        position relative
        //
        &:last-child
            margin: 0
    //
    &__input
        display: block
        width: 100%
        outline: none;
        border: 1px solid color_6
        padding: 10px
        font-size: 20px
        transition: tDelay
        //
        &-wrong
            border-color: #ff0000
    //
    &__btn-pass
        position: absolute
        top: 0
        width 47px
        height 47px
        right 0
        cursor pointer
        background-repeat: no-repeat
        background-size: 50% 50%
        background-position: center
        background-image: url(/images/icons/icon_pass_hide.svg)
        //
        &-show
            background-image: url(/images/icons/icon_pass_show.svg)
    //
    &__submit
        display: block
        padding: 10px 20px
        font-size: 20px
        text-transform: uppercase
        background: color_3
        cursor pointer
        color: color_1
        border: 0
        outline: none
    //
    &__link
        font-size: 14px
        color: color_6
        cursor pointer
        outline: none
        //
        &:hover
            text-decoration: underline
            color: color_3
    //
    &__text
        font-size: 20px
        margin: 0 0 20px 0
//
//
//
@media screen and (max-width: 750px)
    //
    .auth__message 
        font-size: 14px
    //
    .auth
        padding: 50px 20px 20px 20px
        //
        &__btn
            width: 20px
            height 20px
        //
        &__row
            margin: 0 0 20px 0
            flex-direction: column
        //
        &__input
            padding: 5px
            font-size: 16px
        //
        //
        &__btn-pass
            width 32px
            height 32px
        //
        &__submit
            font-size: 16px
            text-align: center
            margin: 0 0 20px 0
            width: 100%
        //
        &__link
            font-size: 12px
        //
        &__text
            font-size: 14px
            margin: 0 0 10px 0