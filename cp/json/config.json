{
    "redactor": [
        {
            "name":     "Imperavi",
            "system":   "imperavi",
            "path":     "/wysiwyg/redactor/",
            "lib":      {
                "style": [
                    "redactor.min.css",
                    "redactor-tweaks.css",
                    "plugins/clips/clips.css",
                    "plugins/alignment/alignment.css",
                    "plugins/pagebreak/pagebreak.css"
                ],
                "script": [
                    "redactor.min.js",
                    "lang/ru.js",
                    "plugins/clips/clips.js",
                    "plugins/alignment/alignment.js",
                    "plugins/pagebreak/pagebreak.js",
                    "plugins/source/source.js",
                    "plugins/properties/properties.js",
                    "plugins/definedlinks/definedlinks.js",
                    "plugins/codemirror/codemirror.js",
                    "plugins/filemanager/filemanager.js",
                    "plugins/inlinestyle/inlinestyle.js",
                    "plugins/imagemanager/imagemanager.js",
                    "plugins/fontcolor/fontcolor.js",
                    "plugins/fontfamily/fontfamily.js",
                    "plugins/fontsize/fontsize.js",
                    "plugins/fullscreen/fullscreen.js",
                    "plugins/table/table.js",
                    "plugins/textexpander/textexpander.js",
                    "plugins/textdirection/textdirection.js",
                    "plugins/counter/counter.js",
                    "plugins/limiter/limiter.js",
                    "plugins/video/video.js"
                ]
            },
            "default":  "1"
        },
        {
            "name":     "Tinymce",
            "system":   "tinymce",
            "path":      "/wysiwyg/tinymce/",
            "lib":      {
                "script": [
                    "tinymce.min.js"
                ]
            }
        },
        {
            "name":     "Quill",
            "system":   "quill",
            "path":      "/wysiwyg/quill/",
            "lib":      {
                "script": [
                    "quill.min.js"
                ],
                "style": [
                    "quill.snow.css",
                    "quill.bubble.css"
                ]
            }
        },
        {
            "name":     "Cleditor",
            "system":   "cleditor",
            "path":      "/wysiwyg/cleditor/",
            "lib":      {
                "style": [
                    "jquery.cleditor.css"
                ],
                "script": [
                    "jquery.cleditor.min.js"
                ]
            }
        }
    ],

    "editor_mode": [
        "htmlmixed",
        "php",
        "css",
        "sql",
        "xml",
        "jsx",
        "nginx",
        "javascript",
        "markdown",
        "smarty",
        "scheme",
        "shell",
        "sass"
    ],

    "editor": [
        {
            "name":     "Codemirror",
            "system":   "codemirror",
            "default":  "1"
        }
    ],

    "themes": []
}
